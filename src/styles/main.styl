$yellow = #FFCC33

#app
  font-family "Myriad Pro", Myriad, "Liberation Sans", "Nimbus Sans L", "Helvetica Neue", Helvetica, Arial, sans-serif
  float left
  width 100%

#main-page
  float left
  width 100%

.first-block
  float left
  width 100%
  height 800px
  width 100%
  background url('../assets/header-bg.png') center center no-repeat
  background-size cover

.navigation
  position absolute
  top 0
  left 0
  width 100%
  height 80px
  padding 0 10%
  box-sizing border-box
  background rgba(0,0,0,0.5)

.nav-logo
  float left
  width auto
  cursor pointer
  margin-right 240px
  img
    float left
    margin 20px 0
    width auto
    height 40px

.navs
  float left
  display flex
  justify-content space-around
  width calc(100% - 350px)
  height 80px

.nav
  width auto
  color #fff
  font-size 17px
  line-height 90px
  font-weight bold
  transition .2s linear
  cursor pointer
  &:hover
    color $yellow
